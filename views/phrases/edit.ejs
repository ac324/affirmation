<% include ../partials/header %>
<% include ../partials/menu %>

<div class="container">
    <h1 style="text-align:center; margin:25px;">Edit Phrase</h1> 
    <div style="width:100%; margin:25px auto;">
        <form action="/categories/<%= category._id %>/phrases/<%= phrase._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Write your affirmation</label>
                <input class="form-control" type = "text" name = "phrase[affirmation]" value = "<%= phrase.affirmation %>" required>
            </div>
            <div class="form-group">
                <label>Select a background image</label>
                <input class="form-control" type = "text" name = "phrase[background]" value = "<%= phrase.background %>" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/categories/<%= category._id %>">Go Back</a>    
    </div>
</div>

<% include ../partials/footer %>